<div class="container">
<h1><%=@cocktail.name%></h1>
<div class="row">
<div class="col-md-6">
<%= image_tag "https://images.unsplash.com/photo-1559443922-3f698a0ff27a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=669&q=80", class: "img-fluid" %>
<%= link_to "Delete Cocktail", cocktail_path(@cocktail), class: "btn btn-outline-danger my-2", method: :delete, data: { confirm: "Are you sure?"} %>
</div>
<div class="col-md-6">
<ul class="list-group my-3">
  <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item my-1"><%= dose.description  %> <%= dose.ingredient.name %> <%= link_to "Delete",
            cocktail_dose_path(@cocktail, dose),
            method: :delete,
            data: { confirm: "Are you sure?" }, class: "btn btn-danger" %></li>
  <% end %>
</ul>
<%= link_to "New Dose", new_cocktail_dose_path(@cocktail), class: "btn btn-outline-primary"%>
</div>
</div>
</div>