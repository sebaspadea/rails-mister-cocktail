<div class="container">
<h1><%=@cocktail.name%></h1>
<div class="row">
<div class="col-md-6 fotin">
<% if @cocktail.photo.attached? %>
          <%= cl_image_tag @cocktail.photo.key, class: "img-fluid imagen-show", crop: :fill %>
        <% else %>
          <%= image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcT_9SJWfF9klDspgw7Q0B4wRGHTPS8FNvHG8w&usqp=CAU", class: "img-fluid imagen-show", crop: :fill  %>
        <% end %>
<div class="d-flex justify-content-between">
<%= link_to "Delete Cocktail", cocktail_path(@cocktail), class: "btn btn-outline-danger my-2", method: :delete, data: { confirm: "Are you sure?"} %>
<%= link_to "New Dose", new_cocktail_dose_path(@cocktail), class: "btn btn-outline-primary my-2"%>
<%= link_to 'New Review', new_cocktail_review_path(@cocktail), class: "btn btn-outline-warning my-2" %>
</div>
</div>
<div class="col-md-6">
<h3 class="mt-5 mb-3 border-bottom border-warning text-center" id="doses">Doses</h3>
<ul class="list-group my-3">
  <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item my-1"> üç∏ <%= dose.ingredient.name.capitalize %> - <%= dose.description  %> <%= link_to "Delete",
            cocktail_dose_path(@cocktail, dose),
            method: :delete,
            data: { confirm: "Are you sure?" }, class: "btn btn-danger" %></li>
  <% end %>
</ul>
</div>
</div>
<div class="row">
<h3 class="mt-5 mb-3 border-bottom border-warning">Reviews</h3>
<div class="col-md-12">
<ul class="list-group review-form">
  <% @cocktail.reviews.each do |review| %>
    <li class="list-group-item review-item"><%="‚≠ê"*review.rating %> <%= review.content %></li>
  <% end %>
</ul>
</div>
</div>
</div>