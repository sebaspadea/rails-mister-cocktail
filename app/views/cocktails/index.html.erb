<div class="container">
<div class="row justify-content-center">
<div class="col-md-4">
<h1>Our Cocktails</h1>
</div>
</div>
</div>
<div class="container">
  <h6>All <%= @cocktails.count %> cocktails</h6>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-md-3 my-3">
        <div class="card">
          <%= image_tag "https://images.unsplash.com/photo-1559443922-3f698a0ff27a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=669&q=80", class: "img-fluid" %>
        </div>
        <div class="card-footer">
        <h3>
          <%= link_to "#{cocktail["name"]}", cocktail_path(cocktail["id"]), id:"LinkTitle"%>
        </h3>
        </div>
      </div>
    <% end %>
  </div>
</div>